# Habilitar el motor de reescritura
RewriteEngine On

# 1. Las solicitudes que comiencen con /api deben dirigirse al index.php para manejar la API
RewriteCond %{REQUEST_URI} ^/api/ [NC]
RewriteRule ^(.*)$ index.php [L,QSA]

# 2. Las solicitudes para archivos o directorios existentes deben servirse directamente
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 3. Las dem√°s solicitudes deben dirigirse a /public/
RewriteRule ^(.*)$ public/$1 [L]